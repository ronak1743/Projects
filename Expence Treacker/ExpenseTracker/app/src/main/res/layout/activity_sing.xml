<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#03A9F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/_250sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp"
            android:fontFamily="@font/concert_one"
            android:text="Wellcome Back"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_50sdp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/concert_one"
            android:textColor="@color/white"
            android:text="Hey! Good to See you again"></TextView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/createaccountbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingRight="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/backforsinget"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_31sdp"
                android:src="@drawable/emailsingin"
                android:layout_height="@dimen/_31sdp"></ImageView>
            <EditText
                android:id="@+id/email_sing"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_7sdp"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/backforsinget"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_31sdp"
                android:src="@drawable/pass"
                android:layout_height="@dimen/_31sdp"></ImageView>
            <EditText

                android:id="@+id/password_sing"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="passsword"
                android:inputType="textPassword"
                android:padding="@dimen/_7sdp"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nothaveAccount_sing"
            android:textSize="15dp"
            android:textColor="#03A9F4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="not have account"></TextView>
        </LinearLayout>
        <Button
            android:id="@+id/subit_sing"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#03A9F4"
            android:text="Singin"
            android:layout_marginTop="@dimen/_70sdp"
            android:textColorLink="@color/white"
            android:typeface="normal"></Button>

    </LinearLayout>

</LinearLayout>