<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel_decorative_black"
        android:text="Welcome to Tic Tac Toe"
        android:textAlignment="center"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/grid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></ImageView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:orientation="horizontal"

            android:padding="@dimen/_3sdp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/_101sdp"
                android:layout_height="@dimen/_95sdp"
                android:onClick="PlayerTap"
                android:padding="@dimen/_10sdp"

                android:tag="0"></ImageView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/_101sdp"
                android:layout_height="@dimen/_95sdp"
                android:onClick="PlayerTap"
                android:padding="@dimen/_10sdp"
                android:tag="1"

                ></ImageView>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/_101sdp"
                android:layout_height="@dimen/_95sdp"
                android:onClick="PlayerTap"
                android:padding="@dimen/_10sdp"
                android:tag="2"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/_101sdp"
                android:layout_height="@dimen/_95sdp"
                android:onClick="PlayerTap"
                android:padding="@dimen/_10sdp"

                android:tag="3"></ImageView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/_101sdp"
                android:layout_height="@dimen/_95sdp"
                android:onClick="PlayerTap"
                android:padding="@dimen/_10sdp"

                android:tag="4"></ImageView>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/_101sdp"
                android:layout_height="@dimen/_95sdp"
                android:onClick="PlayerTap"
                android:padding="@dimen/_10sdp"
                android:tag="5">
                <!--                android:src="@drawable/o"-->
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/_101sdp"
                android:layout_height="@dimen/_95sdp"
                android:onClick="PlayerTap"
                android:padding="@dimen/_10sdp"
                android:tag="6"></ImageView>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="@dimen/_101sdp"
                android:layout_height="@dimen/_95sdp"
                android:onClick="PlayerTap"
                android:padding="@dimen/_10sdp"
                android:tag="7"></ImageView>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="@dimen/_101sdp"
                android:layout_height="@dimen/_95sdp"
                android:onClick="PlayerTap"
                android:padding="@dimen/_10sdp"
                android:tag="8"></ImageView>
        </LinearLayout>
    </LinearLayout>

    <TextView

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cormorant_garamond_italic"
        android:text="x's turn -Tap to play"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>